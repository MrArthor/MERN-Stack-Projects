<% layout('layouts/BoilerPlate')%>
    <h1 class="text-center"> Add Doctor </h1>
    <div class="col-6 offset-md-3">
        <form class="needs-validation" action="/Departments/<%=Id%>/Doctor/AddDoctor" method="POST" novalidate>
            <div class="form-group">
                <div class="form-row">
                    <!-- <div class="">
                        <label for="validationCustom01">Profile Photo</label>
                        <input type="file" class="form-control" id="validationCustom01" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div> -->
                    <div class="">
                        <label for="validationCustom01">First name</label>
                        <input name="Doctor[FirstName]" type="text" class="form-control" id="validationCustom01" placeholder="Mark" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="">
                        <label for="validationCustom01">Last name</label>
                        <input name="Doctor[LastName]" type="text" class="form-control" id="validationCustom01" placeholder="Trueduo" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="">
                        <label for="validationCustom01">Job Title</label>
                        <input name="Doctor[JobTitle]" type="text" class="form-control" id="validationCustom01" placeholder="Resident" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="">
                        <label for="validationCustom01">Date Of Birth</label>
                        <input name="Doctor[DOB]" type="text" class="form-control" id="validationCustom01" placeholder="DDMMYYYY" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="">
                        <label for="validationCustom01">Contact Number</label>
                        <input name="Doctor[PhoneNumber]" type="number" class="form-control" id="validationCustom01" placeholder="+9198876543210" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="">
                        <label for="validationCustom01">Email <Address></Address></label>
                        <input name="Doctor[Email]" type="email" class="form-control" id="validationCustom01" placeholder="Mark@Trueduo.com" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="">
                        <label for="validationCustom01">Gender</label>
                        <input name="Doctor[Gender]" type="text" class="form-control" id="validationCustom01" placeholder="Male/Female" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="">
                        <label for="validationCustomUsername">Username</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend">@</span>
                            </div>
                            <input name="Doctor[username]" type="text" class="form-control" id="validationCustomUsername" placeholder="Username" aria-describedby="inputGroupPrepend" required>
                            <div class="invalid-feedback ">
                                Please choose a username.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-check my-2">
                        <input class="form-check-input" type="checkbox" placeholder="" id="invalidCheck" required>
                        <label class="form-check-label " for="invalidCheck">
                  Agree to terms and conditions
                </label>
                        <div class="invalid-feedback">
                            You must agree before submitting.
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Submit form</button>
            </div>
        </form>
    </div>